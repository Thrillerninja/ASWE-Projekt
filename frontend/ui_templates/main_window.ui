}

/* Radio Button Indicator (the circle) */
QRadioButton::indicator {
    width: 16px;                 /* Size of the indicator */
    height: 16px;
    border-radius: 8px;          /* Makes the indicator perfectly circular */
    border: 2px solid #2980b9;   /* Blue border for the indicator */
    background-color: #ecf0f1;   /* Light grey background when unchecked */
}

/* Checked State */
QRadioButton::indicator:checked {
    background-color: #3498db;   /* Blue background when checked */
    border: 2px solid #2980b9;   /* Darker blue border when checked */
}

/* Disabled State */
QRadioButton::indicator:disabled {
    background-color: #ecf0f1;   /* Light grey background when disabled */
    border: 2px solid #95a5a6;   /* Grey border when disabled */
}

/* Checked and Disabled State */
QRadioButton::indicator:checked:disabled {
    background-color: #95a5a6;   /* Darker grey background when checked and disabled */
    border: 2px solid #7f8c8d;   /* Even darker grey border when checked and disabled */
}</string>
