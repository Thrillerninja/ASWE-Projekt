    border-radius: 8px;           /* Rounded corners for the button */
    padding: 10px 20px;           /* Padding inside the button */
    font-size: 16px;              /* Font size for the button text */
    font-weight: bold;            /* Bold text for emphasis */
    text-align: center;           /* Center the text inside the button */
}

/* Hover State */
QPushButton:hover {
    background-color: #c0392b;    /* Darker red background on hover */
    border: 2px solid #a93226;    /* Even darker red border on hover */
    color: #ecf0f1;               /* Light text color on hover */
}

/* Pressed State */
QPushButton:pressed {
    background-color: #a93226;    /* Even darker red background when pressed */
    border: 2px solid #922b21;    /* Dark border when pressed */
    color: #bdc3c7;               /* Grey text color when pressed */
}

/* Disabled State */
QPushButton:disabled {
    background-color: #bdc3c7;    /* Light grey background when disabled */
    border: 2px solid #95a5a6;    /* Grey border when disabled */
    color: #7f8c8d;               /* Grey text color when disabled */
}
